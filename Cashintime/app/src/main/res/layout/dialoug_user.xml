<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"

    android:orientation="vertical"
    android:background="@drawable/whiteback">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/cancleicon"
        android:tint="@color/colorPrimaryDark"
        android:layout_margin="5dp"
        android:id="@+id/back"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel1">

        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"



            android:id="@+id/pb"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img"
            android:layout_marginTop="10dp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:civ_border_width="1dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/user_icon_grey"
            app:civ_circle_background_color="@color/white"
            app:civ_border_color="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="..."
            android:textSize="25dp"
            android:id="@+id/winname"


            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_off"
            android:text="..."
            android:id="@+id/type"
            android:textSize="13dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/winname"
            android:gravity="center"
            />
        <Button android:layout_width="200dp"
            android:layout_height="40dp"
            android:text=" Send Request "
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"

            android:id="@+id/btn"
           android:layout_below="@id/type"
            android:background="@drawable/butnclick_primery"
            android:textColor="@color/white">

        </Button>
    </RelativeLayout>




</RelativeLayout>