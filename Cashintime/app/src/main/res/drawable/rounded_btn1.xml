                android:bottomRightRadius="300dp"
                android:topLeftRadius="300dp"
                android:topRightRadius="300dp"/>
            <stroke
                android:width="1dp"
                android:color="#FFFFFF"></stroke>

            <solid android:color="#FFFFFF"></solid>
            <!--<gradient
                android:angle="0"
                android:startColor="#FFFFFF"
